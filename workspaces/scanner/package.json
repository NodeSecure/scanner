{
  "name": "@nodesecure/scanner",
  "version": "7.0.0",
  "description": "A package API to run a static analysis of your module's dependencies.",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -b & cp -R ./src/data ./dist/data",
    "lint": "eslint src test",
    "prepublishOnly": "npm run build && pkg-ok",
    "test": "c8 -r html npm run test-only && npm run test-types",
    "test-only": "tsx --test ./test/**/*.spec.ts",
    "test-types": "attw --pack . --profile esm-only"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NodeSecure/scanner.git"
  },
  "keywords": [
    "node",
    "nodejs",
    "security",
    "cli",
    "sast",
    "scanner",
    "static",
    "code",
    "analysis",
    "node_modules",
    "tree",
    "npm",
    "registry",
    "graph",
    "visualization",
    "dependencies"
  ],
  "author": "NodeSecure",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NodeSecure/scanner/issues"
  },
  "homepage": "https://github.com/NodeSecure/tree/master/workspaces/scanner#readme",
  "dependencies": {
    "@fastify/deepmerge": "^3.1.0",
    "@nodesecure/conformance": "^1.1.1",
    "@nodesecure/contact": "^3.0.0",
    "@nodesecure/flags": "^3.0.3",
    "@nodesecure/i18n": "^4.0.2",
    "@nodesecure/js-x-ray": "^10.0.0",
    "@nodesecure/mama": "^2.0.2",
    "@nodesecure/npm-registry-sdk": "^4.4.0",
    "@nodesecure/npm-types": "^1.3.0",
    "@nodesecure/rc": "^5.0.1",
    "@nodesecure/tarball": "^2.1.0",
    "@nodesecure/tree-walker": "^1.3.1",
    "@nodesecure/utils": "^2.3.0",
    "@nodesecure/vulnera": "^2.0.1",
    "@openally/mutex": "^2.0.0",
    "fastest-levenshtein": "^1.0.16",
    "frequency-set": "^2.0.0",
    "pacote": "^21.0.0",
    "semver": "^7.5.4",
    "type-fest": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.2",
    "c8": "^10.1.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
