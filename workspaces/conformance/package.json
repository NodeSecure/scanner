{
  "name": "@nodesecure/conformance",
  "version": "1.2.0",
  "description": "SPDX license conformance for NodeSecure",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -b",
    "prepublishOnly": "npm run build",
